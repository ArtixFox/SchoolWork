package com.adsb.school.Applets;

import java.awt.*;
import java.applet.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class Applets5B extends Applet implements ActionListener {

	private static final long serialVersionUID = 1L;

	Label north, date;
	TextField txt1,txt2,txt3,txt4,txt5,txt6;
	TextArea area1;
	Button button1;
	Panel p1,p2,p3,p4,p5;
	public void init(){
		
		setLayout(new BorderLayout());
		p1 = new Panel();//north
		p2 = new Panel();//west
		p3 = new Panel();//center
		p4 = new Panel();//east
		p5 = new Panel();//south
		north = new Label("this program will be used to find the roots" +
		"and calculate a quadratic equation inputed by the user.");
		date = new Label();
		txt1= new TextField(5);
		txt2 = new TextField(5);
		txt3 = new TextField(5);
		txt4 = new TextField(5);
		txt5 = new TextField(5);
		txt6 = new TextField(5);
		area1 = new TextArea("");
		button1 = new Button("Calculate!");
		
		p1.add(north);
		p2.add(txt1, "a");
		p2.add(txt2, "b");
		p2.add(txt3, "c");
		p3.add(txt4, "r1");
		p3.add(txt5, "r2");
		p3.add(txt6, "Roots?");
		
		
		
	}

	public void actionPerformed(ActionEvent e){
		
	}


	
	
	
	
	
	
}
